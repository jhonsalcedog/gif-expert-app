{
  "name": "gif-expert-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "animate.css": "^4.1.1",
    "chai": "^4.3.4",
    "emerald-ui": "^2.15.0",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "sinon": "^12.0.1",
