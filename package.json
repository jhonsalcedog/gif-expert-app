    "@condor-labs/prettier-config": "1.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "4.28.4",
    "@typescript-eslint/parser": "4.0.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
